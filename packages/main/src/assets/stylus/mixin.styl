/* 样式片段及函数 */
size()
  if (length(arguments) == 1)
    width: arguments[0]
    height: arguments[0]
  else
    width: arguments[0]
    height: arguments[1]

fontHeight()
  if (length(arguments) == 1)
    height: arguments[0]
    line-height: arguments[0]
    font-size: arguments[0]
  else
    height: arguments[0]
    line-height: arguments[0]
    font-size: arguments[1]

fontScale($fontSize)
  font-size: 12px
  transform: scale(($fontSize / 12), ($fontSize / 12))

one-line()
  width: 100%
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

multi-line($lines)
  display: -webkit-box
  overflow: hidden
  text-overflow: ellipsis
  -webkit-line-clamp: $lines
  -webkit-box-orient: vertical

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

flexCenter()
  display: flex
  align-items: center
  justify-content: center

flexWrap()
  display: flex
  flex-wrap: wrap
  align-content: flex-start

flexWrapItem(n)
  flex: 0 0 (100 / n)%

abCenter($direction = xy)
  position: absolute

  if ($direction == x)
    top: 0
    left: 50%
    transform: translate(0, -50%)
  else if ($direction == y)
    top: 50%
    left: 0
    transform: translate(-50%, 0)
  else if ($direction == xy)
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

hide-text()
  text-indent: 101%
  white-space: nowrap
  overflow: hidden

