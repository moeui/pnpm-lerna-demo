clear(n)
  zoom: 1

  &:after
    visibility: hidden
    display: block
    font-size: 0
    content: ' '
    clear: n
    height: 0

abs0()
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

hover8()
  cursor: pointer

  &:hover
    opacity: 0.8